{
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "react-native"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "airbnb-base"
    ],
    "rules": {
      "comma-dangle": [2, "only-multiline"],
      "arrow-body-style": 0,
      "semi": [2, "never"],
      "arrow-parens": [2, "as-needed"],
      "radix": [2, "as-needed"],
      "class-methods-use-this": 0,
      "operator-linebreak": 0,
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": 0
    }
  }